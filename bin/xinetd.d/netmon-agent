service netmon_agent
{
	type           = UNLISTED
        # use the port, that the old netmon procd used
	port           = 9221
	socket_type    = stream
	protocol       = tcp
	wait           = no
	user           = nobody
	server         = /usr/local/bin/netmon_agent
        # allow only computers on the local subnet to contact this service
	only_from      = 127.0.0.1 139.18.9.0/24
	disable        = no
}
